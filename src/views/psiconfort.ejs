<script>
  // Certificaciones interactivas
  document.querySelectorAll(".certification-detail").forEach((item) => {
    item.addEventListener("click", (e) => {
      // Evitar conflicto con elementos hijos
      if (!e.target.closest(".certification-content")) {
        item.classList.toggle("active");

        // Cerrar otros acordeones
        document
          .querySelectorAll(".certification-detail")
          .forEach((otherItem) => {
            if (otherItem !== item && otherItem.classList.contains("active")) {
              otherItem.classList.remove("active");
            }
          });
      }
    });
  });
